<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <target xsi:type="File" name="file" fileName="${basedir}/Logs/${shortdate}.log" layout="[${longdate}] ${logger} ${uppercase:${level}} ${message}" createDirs="true" />
    <target xsi:type="Console" name="console" layout="[${longdate}] ${logger} ${uppercase:${level}} ${message}" detectConsoleAvailable="true" />
  </targets>
  <rules>
    <logger name="*" minlevel="Trace" writeTo="file" />
    <logger name="*" minlevel="Trace" writeTo="console" />
  </rules>
</nlog>